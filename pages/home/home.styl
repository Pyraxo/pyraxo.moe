@keyframes appear {
    from { opacity:0; }
    to { opacity:1; }
}

#container
  height 100vh
  width 100vw
  display flex
  justify-content center
  align-items center
  background #499bea
  background linear-gradient(to bottom, #499bea, #207ce5)
  color aliceblue

#model
  height 20em
  width 20em
  display flex
  justify-content center
  align-items center
  flex-direction column

#model a img
  height 50vw
  width 50vw
  max-height 270px
  max-width 270px
  border-radius 100%
  box-sizing border-box
  border 5px solid #cfd8dc
  transition 0.2s
  animation appear 0.4s 0.5s ease-in-out
  animation-fill-mode backwards

#model a img:hover
  opacity 0.8

#card
  font-family Raleway, sans-serif
  text-align center
  margin-top 2rem
  animation appear 0.4s 0.5s ease-in-out
  animation-fill-mode backwards

#card > h1
  color #0f0f0f
  font-size 1.6rem

#card > h2
  font-size 1.2rem
